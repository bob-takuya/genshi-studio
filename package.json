{
  "name": "genshi-studio",
  "version": "0.2.0",
  "type": "module",
  "description": "WebGL-based graphics engine for cultural expression and digital art",
  "homepage": "https://bob-takuya.github.io/genshi-studio/",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:webgl": "open tests/graphics/test-webgl.html",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [
    "webgl",
    "graphics",
    "drawing",
    "art",
    "canvas",
    "cultural-patterns",
    "ichimatsu",
    "japanese-patterns"
  ],
  "author": "AI Creative Team",
  "license": "MIT",
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@playwright/test": "^1.53.2",
    "@types/three": "^0.178.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "canvg": "^4.0.3",
    "clsx": "^2.1.1",
    "fabric": "^6.7.0",
    "framer-motion": "^12.23.0",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.525.0",
    "monaco-editor": "^0.52.2",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "svg2pdf.js": "^2.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "three": "^0.178.0",
    "vite": "^7.0.3",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts",
      "<rootDir>/tests/**/*.test.tsx"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
